<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/message_margin">

    <LinearLayout
            android:id="@+id/messageLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle"
            android:orientation="vertical"
            android:padding="@dimen/marginBottom">

        <TextView
                android:id="@+id/messageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:autoLink="web"
                tools:text="Message text" />

    </LinearLayout>

    <TextView
            android:id="@+id/senderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginBottom"
            android:layout_marginTop="@dimen/message_margin"
            android:layout_marginEnd="@dimen/marginBottom"
            android:fontFamily="sans-serif"
            android:textSize="11sp"
            tools:text="Message text" />

</LinearLayout>