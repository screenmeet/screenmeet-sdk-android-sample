<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/message_margin">

    <ImageView
        android:id="@+id/actionImage"
        android:layout_gravity="center"
        android:layout_width="@dimen/action_item_size"
        android:layout_height="@dimen/action_item_size" />

    <TextView
        android:id="@+id/actionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/message_margin"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/action_item_font"
        tools:text="Message text" />
</LinearLayout>