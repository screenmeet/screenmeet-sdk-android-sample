<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

    <TextView
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/marginSmall"
            android:textSize="@dimen/participant_item_font"
            tools:text="asd" />

    <Space
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1" />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/hostIv"
            android:layout_width="@dimen/minimum_btn_size"
            android:layout_height="@dimen/minimum_btn_size"
            android:layout_margin="@dimen/marginSmallest"
            android:src="@drawable/grade" />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/audioIv"
            android:layout_width="@dimen/minimum_btn_size"
            android:layout_height="@dimen/minimum_btn_size"
            android:layout_margin="@dimen/marginSmallest" />

</LinearLayout>